---
import Base from "../../layouts/Base.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<Base title="Insights - Eric">
  <section class="py-16">
    <div class="page-container">
      <div class="max-w-2xl">
        <h1 class="text-4xl font-semibold text-ink">Insights</h1>
        <p class="mt-3 text-muted">
          Notes on execution systems, operating cadence, and scaling GTM
          infrastructure.
        </p>
      </div>
      <div class="mt-10 grid gap-5">
        {posts.map((post) => (
          <article class="surface p-6">
            <h2 class="text-xl font-semibold">{post.data.title}</h2>
            <p class="mt-2 text-muted">{post.data.description}</p>
            <p class="mt-3 text-sm text-muted">
              {post.data.publishDate.toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric"
              })}
            </p>
            <a
              class="focus-ring mt-4 inline-flex text-sm font-semibold text-accent hover:text-accent-dark"
              href={`/blog/${post.slug}`}
            >
              Read post
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</Base>
