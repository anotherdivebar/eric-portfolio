---
const {
  title,
  problem,
  stack,
  impact,
  imageSrc,
  imageAlt = `${title} screenshot`
} = Astro.props;
---

<div class="surface p-6">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h3 class="text-lg font-semibold text-ink">{title}</h3>
      <p class="mt-2 text-sm text-muted">{problem}</p>
    </div>
    {imageSrc && (
      <img
        src={imageSrc}
        alt={imageAlt}
        class="h-16 w-24 rounded-lg border border-border object-cover"
        loading="lazy"
      />
    )}
  </div>
  <div class="mt-4 text-sm text-muted">
    <p><span class="font-semibold text-ink">Stack:</span> {stack}</p>
  </div>
  <p class="mt-3 text-sm text-muted">
    <span class="font-semibold text-ink">Impact:</span> {impact}
  </p>
</div>
